<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment"
    android:background="?attr/background_color"
    >


    <TextView
        android:textColor="?attr/text_color"
        android:id="@+id/tv_theme_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/themes_intro"
        android:lineSpacingExtra="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:textStyle="bold"
        android:textColor="?attr/text_color"
        android:id="@+id/tv_choose_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Choose your preferred theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_theme_info" />


    <RadioGroup
        android:id="@+id/rg_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_theme">

        <RadioButton
            android:id="@+id/rb_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Light Theme"
            android:textColor="?attr/text_color" />

        <RadioButton
            android:id="@+id/rb_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Theme"
            android:textColor="?attr/text_color" />

        <RadioButton
            android:id="@+id/rb_amoled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Theme Amoled"
            android:textColor="?attr/text_color" />
    </RadioGroup>


    <TextView
        android:id="@+id/tv_lang_info"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Choose your preferred language"
        android:textColor="?attr/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_theme" />

    <RadioGroup
        android:id="@+id/rg_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lang_info">

        <RadioButton
            android:id="@+id/rb_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="?attr/text_color" />

        <RadioButton
            android:id="@+id/rb_tur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turkish"
            android:textColor="?attr/text_color" />

        <RadioButton
            android:id="@+id/rb_ru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Russian"
            android:textColor="?attr/text_color" />

        <RadioButton
            android:id="@+id/rb_de"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="German"
            android:textColor="?attr/text_color" />


    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>